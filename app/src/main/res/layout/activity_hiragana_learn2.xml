<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.koko.myapplication3.hiragana_learn2"
    android:background="#e50d0d0d">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIRAGANA: EXTRA LETTERS"
                android:id="@+id/textView"
                android:textColor="#ffff4f98"
                android:textStyle="bold"
                android:textSize="26dp"
                android:layout_alignTop="@+id/scrollView4"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/hiragana_learn2_content"
                android:id="@+id/textView8"
                android:textColor="#ffffff"
                android:textSize="18dp"/>

            <GridView
                android:layout_width="fill_parent"
                android:layout_height="580dp"
                android:id="@+id/gridView4"
                android:background="#ffe1e1e1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:numColumns="5"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:id="@+id/button14"
                android:background="#ff9effc0"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:minWidth="120dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
