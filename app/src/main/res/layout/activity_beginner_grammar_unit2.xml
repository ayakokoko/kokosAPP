<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.koko.myapplication3.beginner_grammar_unit2"
    android:background="#e50d0d0d">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNIT 2: 'V-MASU' FORM"
                android:id="@+id/textView"
                android:textColor="#ffff4f98"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_alignTop="@+id/scrollView2"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/beginner_grammar_unit2_content1"
                android:id="@+id/textView6"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_marginBottom="15dp" />

            <GridView
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                android:id="@+id/gridView"
                android:background="#ffe1e3e3"
                android:numColumns="3" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="@string/beginner_grammar_unit2_content2"
                android:id="@+id/textView7"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_marginTop="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEST"
                android:id="@+id/button13"
                android:layout_gravity="center_horizontal"
                android:background="#ff65ffb2"
                android:layout_marginTop="20dp"
                android:minWidth="120dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
