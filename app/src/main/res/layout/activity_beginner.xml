<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.koko.myapplication3.Beginner"
    android:background="#e50d0d0d">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEGINNER"
        android:id="@+id/textView"
        android:textColor="#ffff4f98"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIRAGANA"
        android:id="@+id/button4"
        android:minWidth="200dp"
        android:background="#ffe5ff81"
        android:clickable="true"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KATAKANA"
        android:id="@+id/button5"
        android:minWidth="200dp"
        android:background="#ffffd579"
        android:clickable="true"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="22dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRAMMAR"
        android:id="@+id/button6"
        android:minWidth="200dp"
        android:background="#FF7F66"
        android:clickable="true"
        android:layout_alignLeft="@+id/button4"
        android:layout_below="@+id/button5"
        android:layout_marginTop="22dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIALOGUE"
        android:id="@+id/button7"
        android:minWidth="200dp"
        android:background="#FF6699"
        android:clickable="true"
        android:layout_alignLeft="@+id/button4"
        android:layout_below="@+id/button6"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIDEOS"
        android:id="@+id/button8"
        android:minWidth="200dp"
        android:background="#ffff4981"
        android:clickable="true"
        android:layout_below="@+id/button7"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:layout_marginTop="22dp" />



</RelativeLayout>
